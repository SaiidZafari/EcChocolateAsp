@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form class="m-3" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Id"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email"  />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="text-danger" asp-validation-summary="All"></div>
    </div>

    <div class="Col-sm-10">
        
        @*<a class="btn btn-primary">Update</a>*@
        <input class="btn btn-success" type="submit" value="Update"/>
        <a class="btn btn-primary" asp-action="ListUsers">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Role</h3>
        </div>

        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Not at the moment</h5>
            }
        </div>

        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-action="ManageUserRoles" asp-route-userId="@Model.Id">
                Manage Roles
            </a>
        </div>

    </div>
       
