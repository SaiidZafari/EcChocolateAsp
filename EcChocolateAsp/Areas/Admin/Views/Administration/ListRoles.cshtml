@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    @foreach (var role in Model)
    {
        <div class="card mb-3 w-50">
            <div class="card-header">
                Role ID: @role.Id;
            </div>
            <div class="card-body">
                <h5 class="card-title ml-auto">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id"  method="post">
                    <a class="btn btn-info" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                    
                    <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('Are you sure you want to delete user : @role.Name')" />
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card mb-3">

        <div class="card-header">
            No rols created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>

            <a class="btn btn-info" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>

    </div>
}
