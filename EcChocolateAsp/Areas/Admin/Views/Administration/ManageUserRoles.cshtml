@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage user role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">

                    <input type="hidden" asp-for="@Model[i].RoleId">

                    <input type="hidden" asp-for="@Model[i].RoleName">

                    <input class="form-check-input" asp-for="@Model[i].IsSelected">

                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">

                <div>
                    <input type="submit" value="Update" class="btn btn-success" style="width:auto" />
                    <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="EditUser" asp-route-id="@ViewBag.userId" >Cancel</a>
                </div>
            </div>
    </div>
</form>