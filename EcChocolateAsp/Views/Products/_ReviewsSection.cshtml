@model EcChocolateAsp.Models.ProductsDisplayViewModel

<div class="row m-2 border p-0 container">
    <div class="row bg-light border-bottom h5 w-100 m-0 pl-2">
        Reviews
    </div>
    <div class="py-2 col-12">
        @foreach (var review in Model.ReviewsDto.Reviews)
        {
            <div class="row container m-1">
                @* Review Head (Title, Score, Name) *@
                <div class="row border container p-0 mx-1 py-1 bg-light">
                    <div class="col-9 col-sm-10 col-md-11">
                        <div class="h6">
                            @review.Title
                        </div>
                        <div class="small pl-2">
                            By: @review.UserName
                        </div>
                    </div>
                    <div class="col-3 col-sm-2 col-md-1 h3">
                        @review.Score/5
                    </div>
                </div>
                <div class="row p-3 w-100 border border-top-0 mx-1 bg-white">
                    @* Review Body *@
                    @review.Body
                </div>
            </div>
        }
    </div>
    <div class="mb-2">
        <button class="btn btn-secondary ml-3 mt-2" type="button" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse">
            Write Review
        </button>
    </div>
    <div class="collapse row mt-0 w-100 mx-3 mb-2" id="collapse">
        <div class="card px-3 py-2 w-100">
            <form class="w-100" asp-controller="review" asp-action="add">
                <div class="w-75">
                    <input type="hidden" asp-for="ReviewsDto.ProductId" />
                    <div class="form-group">
                        <label asp-for="ReviewsDto.UserName" class="control-label"></label>
                        <input asp-for="ReviewsDto.UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewsDto.ReviewTitle" class="control-label"></label>
                        <input asp-for="ReviewsDto.ReviewTitle" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewsDto.ReviewBody" class="control-label"></label>
                        <textarea asp-for="ReviewsDto.ReviewBody" rows="4" class="form-control"></textarea>
                    </div>
                    <div class="form-group w-25">
                        <label asp-for="ReviewsDto.ReviewScore" class="control-label"></label>
                        <input asp-for="ReviewsDto.ReviewScore" class="form-control" min="0" max="5" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Post Review" class="btn btn-secondary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>